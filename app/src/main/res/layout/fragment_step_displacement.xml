<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:orientation="vertical"
                tools:context=".MainActivity$GraphViewFragment">

    <!-- Graph that will be displaying the data -->
    <com.jjoe64.graphview.GraphView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/graph" />

    <!-- TextView to display step counter data -->
    <TextView
            android:id="@+id/step_counter_label"
            android:text="@string/step_counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <!-- TextView to display step counter data -->
    <TextView
            android:id="@+id/displacement_east_label"
            android:text="@string/displacement_east"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <!-- TextView to display step counter data -->
    <TextView
            android:id="@+id/displacement_north_label"
            android:text="@string/displacement_north"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/angle"
            android:text="@string/angle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <!-- Reset button -->
    <Button
            android:id="@+id/pause_button"
            android:text="@string/button_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    <!-- Reset button -->
    <Button
            android:id="@+id/reset_button"
            android:text="@string/button_reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
</LinearLayout>
